<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dip">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/certificate_alias_prompt_certificate_name"/>

    <EditText
            android:id="@+id/alias_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:inputType="text"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_selectability_description"/>

    <CheckBox
        android:id="@+id/alias_user_selectable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_selectability_checkbox"/>

</LinearLayout>
